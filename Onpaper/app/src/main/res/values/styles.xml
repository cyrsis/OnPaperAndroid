<resources>

  <!-- Base application theme. -->
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme" parent="AppTheme.Base">

  </style>

  <style name="SplashTheme" parent="AppTheme.Base">
    <item name="android:windowBackground">@drawable/background_splash</item>

  </style>


  <style name="AppThemeFullScreenImage" parent="Theme.Design.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="FullScreen.TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
    <item name="android:textColor">@color/colorPrimary</item>
  </style>

  <style name="FullScreen.TextAppearance.Title.Inverse" parent="TextAppearance.AppCompat.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>


</resources>
